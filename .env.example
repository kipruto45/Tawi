# Example environment variables for Tawi project
# Copy this to a file named `.env` in the project root for local development,
# but in production set these values in Render's dashboard (do NOT commit a
# real SECRET_KEY or passwords to source control).

# Core settings
SECRET_KEY=replace-me-with-a-secure-secret
DJANGO_DEBUG=False
ALLOWED_HOSTS=.your-app.onrender.com,localhost,127.0.0.1

# Database (Postgres). Render will provide DATABASE_URL for managed Postgres
# services; example format below:
# DATABASE_URL=postgres://user:password@hostname:5432/dbname
DATABASE_URL=

# Email (SMTP) - used for password resets and notifications
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-smtp-user
EMAIL_HOST_PASSWORD=your-smtp-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=tawiproject@gmail.com
SERVER_EMAIL=tawiproject@gmail.com

# Static and media storage
USE_S3=0
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=

# Celery / Redis (optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=${CELERY_BROKER_URL}

# Optional 3rd-party integrations
SENTRY_DSN=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Security toggles (set to True in production if you enforce these)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=60
SECURE_HSTS_PRELOAD=False
SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# Render-specific: set these in Render's environment editor
# RENDER_POSTGRESQL_URL (if provided by Render as a different name)

