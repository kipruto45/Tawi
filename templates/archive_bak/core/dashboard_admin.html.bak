<!DOCTYPE html>
<html lang="en">
<head>
  {% load static %}
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard | Tawi Tree Planting Project</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/feather-icons"></script>
  <style>
    body {
      background-image: url('{% static "img/tawi_forest_bg.jpg" %}');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }
    .glass {
      background: rgba(255, 255, 255, 0.92);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(34, 197, 94, 0.2);
      border-radius: 18px;
      box-shadow: 0 6px 20px rgba(34, 197, 94, 0.12);
    }
    .sidebar-link {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 0.6rem 1rem;
      border-radius: 8px;
      font-size: 0.9rem;
      transition: all 0.2s ease-in-out;
    }
    .sidebar-link:hover, .active {
      background: linear-gradient(to right, #22c55e, #16a34a);
      color: white !important;
      box-shadow: 0 2px 6px rgba(34, 197, 94, 0.2);
    }
  </style>
</head>

<body class="min-h-screen flex bg-green-50/70 relative">

  <!-- Sidebar -->
  <aside data-sidebar="true" class="w-64 glass h-screen p-5 flex flex-col justify-between fixed left-0 top-0 -translate-x-full md:translate-x-0 transition-transform z-20" aria-hidden="true">
    <div>
      <div class="flex items-center gap-2 mb-8">
        <img src="{% static 'img/tawi_logo.png' %}" alt="Tawi Logo" class="w-10 h-10 rounded-full border border-green-300" onerror="this.onerror=null;this.src='{% static 'img/tawi_leaf_logo.svg' %}';" />
        <span class="font-bold text-green-700 text-lg">Tawi Admin</span>
      </div>

      <nav class="space-y-1 text-green-700 font-medium">
        <a href="{% url 'dashboard_admin' %}" class="sidebar-link active">
          <i data-feather="home" class="w-4 h-4"></i> Dashboard
        </a>
  <a href="{% url 'accounts:user_list' %}" class="sidebar-link">
          <i data-feather="users" class="w-4 h-4"></i> Users
        </a>
        <a href="{% url 'partner_list' %}" class="sidebar-link">
          <i data-feather="briefcase" class="w-4 h-4"></i> Partners
        </a>
        <a href="{% url 'message_list' %}" class="sidebar-link">
          <i data-feather="mail" class="w-4 h-4"></i> Messages
        </a>
  <a href="{% url 'accounts:role_management' %}" class="sidebar-link">
          <i data-feather="user-check" class="w-4 h-4"></i> Role Management
        </a>
        <a href="{% url 'about' %}" class="sidebar-link">
          <i data-feather="info" class="w-4 h-4"></i> About
        </a>
        {% include 'includes/sidebar_feedback_link.html' %}
      </nav>
    </div>

    <div>
      <a href="{% url 'logout' %}" class="sidebar-link text-red-600 hover:bg-red-100 hover:text-red-700">
        <i data-feather="log-out" class="w-4 h-4"></i> Logout
      </a>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 ml-0 md:ml-64 p-8 relative z-10">
    <!-- Header -->
    <header class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-2xl font-extrabold text-green-700">Admin Dashboard</h1>
        <p class="text-sm text-green-600 mt-1">Overview of your environmental impact ðŸŒ¿</p>
      </div>
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-2 text-green-700 font-medium bg-green-50 px-3 py-1 rounded-md shadow-sm">
          <i data-feather="user" class="w-4 h-4 text-green-600"></i>
          {{ request.user.username }}
        </div>
      </div>
    </header>

    <!-- Stats Section -->
    <section class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="glass p-5 flex flex-col items-start">
        <i data-feather="users" class="w-6 h-6 text-green-600 mb-2"></i>
        <h2 class="text-2xl font-bold text-green-700">{{ total_users }}</h2>
        <p class="text-sm text-green-600">Registered Users</p>
      </div>
      <div class="glass p-5 flex flex-col items-start">
        <i data-feather="briefcase" class="w-6 h-6 text-green-600 mb-2"></i>
        <h2 class="text-2xl font-bold text-green-700">{{ total_partners }}</h2>
        <p class="text-sm text-green-600">Partner Institutions</p>
      </div>
      <div class="glass p-5 flex flex-col items-start">
        <i data-feather="mail" class="w-6 h-6 text-green-600 mb-2"></i>
        <h2 class="text-2xl font-bold text-green-700">{{ total_messages }}</h2>
        <p class="text-sm text-green-600">Messages Received</p>
      </div>
      <div class="glass p-5 flex flex-col items-start">
        <i data-feather="tree" class="w-6 h-6 text-green-600 mb-2"></i>
        <h2 class="text-2xl font-bold text-green-700">{{ total_trees }}</h2>
        <p class="text-sm text-green-600">Trees Planted</p>
      </div>
    </section>

    <!-- Recent Activity -->
    <section class="glass p-6">
      <h2 class="text-green-700 font-semibold text-lg mb-4 flex items-center gap-2">
        <i data-feather="activity" class="w-5 h-5 text-green-600"></i> Recent Activity
      </h2>
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm text-left">
          <thead class="bg-green-100 text-green-700 uppercase text-xs">
            <tr>
              <th class="px-4 py-2">#</th>
              <th class="px-4 py-2">User</th>
              <th class="px-4 py-2">Action</th>
              <th class="px-4 py-2">Timestamp</th>
            </tr>
          </thead>
          <tbody>
            {% for activity in recent_activities %}
            <tr class="border-t border-green-100 hover:bg-green-50 transition">
              <td class="px-4 py-2">{{ forloop.counter }}</td>
              <td class="px-4 py-2">{{ activity.user.username }}</td>
              <td class="px-4 py-2 text-green-700">{{ activity.description }}</td>
              <td class="px-4 py-2 text-green-600 text-xs">{{ activity.timestamp|date:"M d, Y H:i" }}</td>
            </tr>
            {% empty %}
            <tr>
              <td colspan="4" class="text-center py-4 text-green-600">No recent activity found ðŸŒ±</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </section>

    <!-- Footer -->
    <footer class="mt-8 text-center text-green-400 text-xs">
      Â© 2025 Tawi Tree Planting Project | Admin Portal ðŸŒ³
    </footer>
  </main>

  <script>feather.replace();</script>
  {% include 'includes/sidebar_behavior.html' %}
</body>
</html>
