{% load static %}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Messages | Tawi</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/feather-icons"></script>
</head>
<body class="min-h-screen bg-green-50 flex items-center justify-start p-8">
  <main class="w-full max-w-4xl mx-auto glass p-6">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold text-green-700">Messages</h1>
      <a href="{% url 'landing' %}" class="text-sm text-green-600 hover:underline">Back to home</a>
    </div>

    <div class="space-y-3">
      {% for m in messages %}
      <div class="p-4 border rounded-lg bg-white">
        <h3 class="font-semibold text-green-700">{{ m.subject }}</h3>
        <p class="text-sm text-green-600">From: {{ m.from }} â€” {{ m.date }}</p>
      </div>
      {% endfor %}
    </div>
  </main>
  <script>feather.replace();</script>
</body>
</html>