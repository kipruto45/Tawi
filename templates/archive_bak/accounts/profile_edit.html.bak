<!DOCTYPE html>
<html lang="en">
<head>
  {% load static %}
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Profile | Tawi Tree Planting Project</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/feather-icons"></script>
  <style>
    body {
      background-image: url('{% static "img/tawi_forest_bg.jpg" %}');
      background-size: cover;
      background-position: center;
    }
    .card {
      background: rgba(255, 255, 255, 0.96);
      border-radius: 18px;
      box-shadow: 0 4px 24px rgba(34, 197, 94, 0.15);
      border: 1.5px solid #e5e7eb;
    }
    .anim {
      animation: fadeInUp 0.9s ease-out;
    }
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: none; }
    }
  </style>
</head>

<body class="min-h-screen bg-cover bg-center relative flex items-center justify-center">
  <div class="absolute inset-0 bg-green-50/80"></div>

  <!-- Profile Card -->
  <div class="relative z-10 card anim w-[95%] max-w-lg p-6 text-green-900">

    <!-- Header -->
    <div class="text-center mb-6">
  <img src="{% static 'img/tawi_logo.png' %}" alt="Tawi Logo" class="mx-auto w-12 h-12 mb-3 rounded-full shadow border-2 border-green-300" onerror="this.onerror=null;this.src='{% static 'img/tawi_leaf_logo.svg' %}';" />
      <h1 class="text-2xl font-extrabold text-green-700">Edit Your Profile</h1>
      <p class="text-green-500 text-xs mt-1">Keep your information up-to-date ðŸŒ¿</p>
    </div>

    <!-- Profile Edit Form -->
    <form method="POST" enctype="multipart/form-data" class="space-y-4">
      {% csrf_token %}
      {% if messages %}
        <div class="space-y-2">
          {% for msg in messages %}
            <div class="rounded px-3 py-2 text-xs {{ msg.tags }}">{{ msg }}</div>
          {% endfor %}
        </div>
      {% endif %}

      <!-- Profile Photo -->
      <div class="flex flex-col items-center mb-2">
      {% if request.user.is_authenticated %}
        {% with role=request.user.profile.role|default_if_none:"" %}
          {% if role == 'admin' %}
            <a href="{% url 'dashboard_admin' %}" class="text-sm text-green-600 hover:underline">Back to dashboard</a>
          {% else %}
            <a href="{% url 'accounts:profile' %}" class="text-sm text-green-600 hover:underline">Back to profile</a>
          {% endif %}
        {% endwith %}
      {% else %}
  <a href="{% url 'accounts:profile' %}" class="text-sm text-green-600 hover:underline">Back to profile</a>
      {% endif %}
        <input type="file" name="profile_image"
               class="block mt-1 text-xs text-green-700 bg-green-50 border border-green-100 rounded-md p-1 w-[75%] focus:ring-2 focus:ring-green-400">
      </div>

      <!-- Full Name -->
      <div class="relative">
        <i data-feather="user" class="absolute left-3 top-2.5 text-green-400"></i>
        <input type="text" name="full_name" value="{{ user.get_full_name }}" placeholder="Full Name" required
               class="w-full pl-10 pr-3 py-2 bg-green-50 text-green-900 placeholder-green-400 rounded-md focus:ring-2 focus:ring-green-400 border border-green-100 text-sm">
      </div>

      <!-- Email -->
      <div class="relative">
        <i data-feather="mail" class="absolute left-3 top-2.5 text-green-400"></i>
        <input type="email" name="email" value="{{ user.email }}" placeholder="Email Address" required
               class="w-full pl-10 pr-3 py-2 bg-green-50 text-green-900 placeholder-green-400 rounded-md focus:ring-2 focus:ring-green-400 border border-green-100 text-sm">
      </div>

      <!-- Phone -->
      <div class="relative">
        <i data-feather="phone" class="absolute left-3 top-2.5 text-green-400"></i>
        <input type="text" name="phone" value="{{ profile.phone }}" placeholder="Phone Number"
               class="w-full pl-10 pr-3 py-2 bg-green-50 text-green-900 placeholder-green-400 rounded-md focus:ring-2 focus:ring-green-400 border border-green-100 text-sm">
      </div>

      <!-- Organization -->
      <div class="relative">
        <i data-feather="home" class="absolute left-3 top-2.5 text-green-400"></i>
        <input type="text" name="organization" value="{{ profile.organization }}" placeholder="Organization (School, Church, etc.)"
               class="w-full pl-10 pr-3 py-2 bg-green-50 text-green-900 placeholder-green-400 rounded-md focus:ring-2 focus:ring-green-400 border border-green-100 text-sm">
      </div>

      <!-- Location -->
      <div class="relative">
        <i data-feather="map-pin" class="absolute left-3 top-2.5 text-green-400"></i>
        <input type="text" name="location" value="{{ profile.location }}" placeholder="Location (e.g., Nyeri Town)"
               class="w-full pl-10 pr-3 py-2 bg-green-50 text-green-900 placeholder-green-400 rounded-md focus:ring-2 focus:ring-green-400 border border-green-100 text-sm">
      </div>

      <!-- Bio -->
      <div class="relative">
        <i data-feather="info" class="absolute left-3 top-2.5 text-green-400"></i>
        <textarea name="bio" placeholder="Write something about yourself..." rows="3"
                  class="w-full pl-10 pr-3 py-2 bg-green-50 text-green-900 placeholder-green-400 rounded-md focus:ring-2 focus:ring-green-400 border border-green-100 text-sm">{{ profile.bio }}</textarea>
      </div>

      <!-- Save Button -->
      <button type="submit"
              class="w-full bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 transition-all py-2.5 rounded-md font-semibold shadow flex items-center justify-center gap-2 text-white text-sm">
        <i data-feather="save" class="w-4 h-4"></i> Save Changes
      </button>
    </form>

    <!-- Divider -->
    <div class="flex items-center my-3">
      <hr class="flex-1 border-green-200">
      <span class="px-2 text-green-400 text-xs">OR</span>
      <hr class="flex-1 border-green-200">
    </div>

    <!-- Navigation -->
    <div class="text-center">
      <a href="{% url 'profile' %}"
         class="text-green-600 hover:underline text-xs flex items-center justify-center gap-1">
        <i data-feather="arrow-left" class="w-3 h-3"></i> Back to Profile
      </a>
    </div>

    <!-- Footer -->
    <p class="text-center text-[10px] text-green-400 mt-4">
      Â© 2025 Tawi Tree Planting Project | Nurturing Nature Together ðŸŒ²
    </p>
  </div>

  <script>feather.replace();</script>
</body>
</html>
