<!DOCTYPE html>
<html lang="en">
<head>
  {% load static %}
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reports Dashboard | Tawi Tree Planting Project</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/feather-icons"></script>
  <style>
    body {
      background-image: url('{% static "img/tawi_forest_bg.jpg" %}');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }
    .glass {
      background: rgba(255,255,255,0.92);
      backdrop-filter: blur(10px);
      border:1px solid rgba(34,197,94,0.2);
      border-radius:18px;
      box-shadow:0 6px 20px rgba(34,197,94,0.12);
    }
    .stat-card {
      padding: 1rem;
      border-radius: 12px;
      background: rgba(34,197,94,0.05);
      text-align: center;
    }
    .stat-card h2 {
      font-size: 1.5rem;
      color: #16a34a;
      font-weight: 700;
    }
    .stat-card p {
      color: #065f46;
      font-weight: 500;
    }
  </style>
</head>
<body class="min-h-screen flex flex-col items-center justify-start p-8">

  <!-- Header -->
  <header class="mb-6 text-center">
  <img src="{% static 'img/tawi_logo.png' %}" alt="Tawi Logo" class="w-12 h-12 mx-auto rounded-full border border-green-300 mb-2" onerror="this.onerror=null;this.src='{% static 'img/tawi_leaf_logo.svg' %}';" />
    <h1 class="text-2xl font-extrabold text-green-700">Reports Dashboard</h1>
    <p class="text-green-600 text-sm mt-1">Overview of all reports and their statuses ðŸŒ¿</p>
  </header>

  <!-- Stats Section -->
  <section class="w-full max-w-5xl grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="glass stat-card">
      <i data-feather="file-text" class="w-6 h-6 mx-auto text-green-600 mb-2"></i>
      <h2>{{ total_reports }}</h2>
      <p>Total Reports</p>
    </div>
    <div class="glass stat-card">
      <i data-feather="check-circle" class="w-6 h-6 mx-auto text-green-600 mb-2"></i>
      <h2>{{ completed_reports }}</h2>
      <p>Completed Reports</p>
    </div>
    <div class="glass stat-card">
      <i data-feather="clock" class="w-6 h-6 mx-auto text-green-600 mb-2"></i>
      <h2>{{ pending_reports }}</h2>
      <p>Pending Reports</p>
    </div>
    <div class="glass stat-card">
      <i data-feather="trash-2" class="w-6 h-6 mx-auto text-green-600 mb-2"></i>
      <h2>{{ cancelled_reports }}</h2>
      <p>Cancelled Reports</p>
    </div>
  </section>

  <!-- Recent Activity Table -->
  <section class="glass w-full max-w-5xl p-6 mb-8">
    <h2 class="text-green-700 font-semibold text-lg mb-4 flex items-center gap-2">
      <i data-feather="activity" class="w-5 h-5 text-green-600"></i> Recent Report Activity
    </h2>
    <div class="overflow-x-auto">
      <table class="min-w-full text-left border border-green-100 rounded-md shadow-sm">
        <thead class="bg-green-100 text-green-700 uppercase text-xs">
          <tr>
            <th>#</th>
            <th>Report</th>
            <th>Status</th>
            <th>Created At</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for report in recent_reports %}
          <tr class="border-t border-green-100 hover:bg-green-50 transition">
            <td>{{ forloop.counter }}</td>
            <td class="font-medium text-green-700">{{ report.title }}</td>
            <td>
              <span class="text-xs px-2 py-1 rounded-full
                    {% if report.status == 'Completed' %}bg-green-100 text-green-700
                    {% elif report.status == 'Pending' %}bg-yellow-100 text-yellow-700
                    {% else %}bg-gray-100 text-gray-700{% endif %}">
                {{ report.status }}
              </span>
            </td>
            <td class="text-green-500 text-xs">{{ report.created_at|date:"M d, Y H:i" }}</td>
            <td class="text-center flex justify-center gap-2">
              <a href="{% url 'report_detail' report.id %}" class="text-green-600 hover:text-green-800">
                <i data-feather="eye" class="w-4 h-4"></i>
              </a>
              <a href="{% url 'report_download' report.id %}" class="text-white bg-green-500 hover:bg-green-600 px-2 py-1 rounded-md shadow flex items-center gap-1">
                <i data-feather="download" class="w-4 h-4"></i>
              </a>
            </td>
          </tr>
          {% empty %}
          <tr>
            <td colspan="5" class="text-center py-4 text-green-600 text-sm">No recent reports found ðŸŒ±</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </section>

  <!-- Charts Section -->
  <section class="glass w-full max-w-5xl p-6 mb-8">
    <h2 class="text-green-700 font-semibold text-lg mb-4 flex items-center gap-2">
      <i data-feather="bar-chart-2" class="w-5 h-5 text-green-600"></i> Reports Insights
    </h2>
    <canvas id="reportsChart" class="w-full h-64"></canvas>
  </section>

  <!-- Footer -->
  <footer class="mt-6 text-center text-green-400 text-xs">
    Â© 2025 Tawi Tree Planting Project | Reports Dashboard
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const ctx = document.getElementById('reportsChart').getContext('2d');
    const reportsChart = new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ['Completed', 'Pending', 'Cancelled'],
        datasets: [{
          label: 'Reports Status',
          data: [{{ completed_reports }}, {{ pending_reports }}, {{ cancelled_reports }}],
          backgroundColor: ['#16a34a', '#facc15', '#ef4444'],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { position: 'bottom' },
          tooltip: { enabled: true }
        }
      }
    });
  </script>

  <script>feather.replace();</script>
</body>
</html>
