{% load static %}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>My Hours | Tawi Tree Planting Project</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/feather-icons"></script>
  <style>
    body {
      background-color: #f6fdf7;
      color: #0f172a;
      font-family: 'Inter', system-ui, sans-serif;
    }
    .glass {
      background: rgba(255,255,255,0.95);
      border-radius: 16px;
      border: 1px solid rgba(34,197,94,0.12);
      box-shadow: 0 8px 30px rgba(22,163,74,0.06);
    }
  </style>
</head>

<body class="min-h-screen py-12 px-4 flex flex-col items-center">

  <header class="w-full max-w-4xl mb-8 text-center">
    <div class="inline-flex items-center gap-3">
      <img src="{% static 'img/tawi_logo.png' %}" alt="Tawi Logo" class="w-10 h-10 rounded-full border border-green-200" onerror="this.onerror=null;this.src='{% static 'img/tawi_leaf_logo.svg' %}';">
      <h1 class="text-2xl font-extrabold text-green-800">My Volunteer Hours</h1>
    </div>
    <p class="text-sm text-green-600 mt-2">Track the time youâ€™ve spent volunteering for Tawi Tree Planting events ðŸŒ³</p>
  </header>

  <main class="w-full max-w-4xl">

    <!-- Total hours summary -->
    {% if total_hours %}
      <div class="glass p-6 mb-6 flex justify-between items-center">
        <div>
          <h2 class="text-green-800 font-semibold text-lg">Total Hours</h2>
          <p class="text-sm text-green-600">Thank you for your incredible contribution!</p>
        </div>
        <div class="text-4xl font-extrabold text-green-700">{{ total_hours }}</div>
      </div>
    {% endif %}

    <!-- Hours list -->
    {% if hours %}
      <div class="grid gap-4">
        {% for record in hours %}
          <article class="glass p-5 flex flex-col sm:flex-row sm:justify-between sm:items-center">
            <div>
              <h3 class="font-semibold text-green-800">{{ record.event.name }}</h3>
              <p class="text-sm text-green-600 mt-1">{{ record.date|date:"M d, Y" }}</p>
            </div>
            <div class="text-right mt-3 sm:mt-0">
              <span class="text-2xl font-bold text-green-700">{{ record.hours }}</span>
              <span class="text-sm text-green-600 ml-1">hrs</span>
            </div>
          </article>
        {% endfor %}
      </div>

    {% else %}
      <!-- Empty state -->
      <div class="glass p-8 text-center">
        <i data-feather="clock" class="w-10 h-10 text-green-600 mx-auto mb-3"></i>
        <h2 class="text-lg font-semibold text-green-800 mb-2">No hours recorded yet</h2>
        <p class="text-sm text-green-600 mb-4">
          You havenâ€™t recorded any volunteering hours yet. Join an event or start planting to log your time.
        </p>
        <div class="flex items-center justify-center gap-3">
          <a href="{% url 'volunteer_sign_up' %}" class="bg-gradient-to-r from-green-500 to-green-600 text-white px-4 py-2 rounded-md font-semibold shadow hover:opacity-90">
            <i data-feather="user-plus" class="w-4 h-4"></i> Volunteer Now
          </a>
          <a href="{% url 'dashboard_guest' %}" class="px-3 py-2 rounded-md border border-green-100 text-green-700 hover:bg-green-50 text-sm">
            Back to Dashboard
          </a>
        </div>
      </div>
    {% endif %}

  </main>

  <footer class="mt-10 text-center text-green-400 text-xs">
    Â© 2025 Tawi Tree Planting Project | Every Hour Counts ðŸŒ¿
  </footer>

  <script>feather.replace();</script>
</body>
</html>
